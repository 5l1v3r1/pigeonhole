test "Action limit" {
	if not test_compile "errors/actions-limit.sieve" {
		test_fail "compile failed";
	}

	if test_execute {
		test_fail "execution should have failed";
	}

	if test_error :count "gt" :comparator "i;ascii-numeric" "1" {
