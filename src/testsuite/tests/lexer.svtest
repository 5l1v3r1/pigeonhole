require "vnd.dovecot.testsuite";
require "variables";

/* Test conformance to RFC 5228 - 2.4.2. Strings */

set "text" text:
Line 1
.Line 2
..Line 3
.Line 4
Line 5
.
;

set "quoted"
"Line 1
.Line 2
.Line 3
.Line 4
Line 5
";

test "LEXER-string-literal" {
	if not string :is "${text}" "${quoted}" {
		test_fail "lexer messed-up dot stuffing";
	}
}


